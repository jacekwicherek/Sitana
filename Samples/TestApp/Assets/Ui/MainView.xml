<?xml version="1.0" encoding="utf-8"?>
<UiSplitterView Controller="TestApp.TestController,TestApp"
    xmlns="namespace:Sitana.Framework.Ui.Views,Sitana.Framework"
    xmlns:button="namespace:Sitana.Framework.Ui.Views.ButtonDrawables,Sitana.Framework"
    xmlns:window="type:Sitana.Framework.Ui.Views.PositionParameters,Sitana.Framework"
    window:Width="640" window:Height="480" SplitterSize="4" Position="45" Mode="Vertical" ViewRemoved="{OnViewRemoved()}">
  <UiSplitterView.Children>
    <UiLabel BackgroundColor="#ff0000" Text="{Test('This is some text defined in xml file.')}" TextColor="{TextColor}" Font="TestFont" FontSize="21"/>
    <!--<UiLabel BackgroundColor="#ddff00" Text="{Test2()}" TextColor="#0000ff" Font="TestFont" FontSize="21"/>-->

    <UiButton Text="{Test2()}">
      <UiButton.Drawables>
        <button:SolidBackground ColorPushed="#80ffffff" ColorReleased="#ffffff" ColorDisabled="#80ffffff"/>
        <button:Text ColorPushed="#80000000" ColorReleased="#000000" ColorDisabled="#80000000" Font="TestFont" FontSize="21" TextAlign="Right,Middle" Padding="10"/>
      </UiButton.Drawables>
    </UiButton>
    
