<?xml version="1.0" encoding="utf-8"?>
<UiSplitterView Controller="TestApp.TestController,TestApp"
    xmlns="namespace:Sitana.Framework.Ui.Views,Sitana.Framework"
    xmlns:button="namespace:Sitana.Framework.Ui.Views.ButtonDrawables,Sitana.Framework"
    Width="640" Height="480" SplitterSize="4" Position="45" Mode="Horizontal" ViewRemoved="{OnViewRemoved()}" ClipChildren="true" ViewResized="{OnResized(width,height}}"
    MinWidth="480" MinHeight="320">
  <UiSplitterView.Children>

    <UiStackPanel Mode="Vertical" BackgroundColor="#203040" Spacing="10" Padding="10">
      <UiStackPanel.Children>
        <UiLabel Text="{Info}" BackgroundColor="#20ff8080" TextColor="#ffffff" Font="TestFont" FontSize="16" Height="32"/>
        <UiLabel Text="{Test2()}" BackgroundColor="#208080ff" TextColor="{TextColor}" Font="TestFont" FontSize="16" Height="32" Width="C-10" Align="Left"/>
        <UiLabel Text="{ButtonClick}" BackgroundColor="#2080ff80" TextColor="#ffffff" Font="TestFont" FontSize="16" Height="32" Width="C-10" Align="Right"/>
        <UiStackPanel Mode="Horizontal" BackgroundColor="#2080ffff" Spacing="10" Padding="10" Height="40">
          <UiStackPanel.Children>
            <UiRectangle BackgroundColor="#ff0000" Width="20" Height="20"/>
            <UiRectangle BackgroundColor="#ff8000" Width="20" Height="20"/>
            <UiRectangle BackgroundColor="#ffff00" Width="20" Height="20"/>
            <UiRectangle BackgroundColor="#00ff00" Width="20" Height="20"/>
            <UiRectangle BackgroundColor="#00ffff" Width="20" Height="20"/>
            <UiRectangle BackgroundColor="#0000ff" Width="20" Height="20"/>
            <UiRectangle BackgroundColor="#8000ff" Width="20" Height="20"/>
            <UiRectangle BackgroundColor="#ff00ff" Width="20" Height="20"/>
          </UiStackPanel.Children>
        </UiStackPanel>
      </UiStackPanel.Children>
    </UiStackPanel>

    <UiBorder BackgroundColor="#ff0000">
      <UiBorder.Children>
        <UiButton Style="DefaultButton" Text="{Test('Text from method.')}" Width="320" Height="64" X="C" Y="C-10" Align="Center,Bottom" Click="{OnClick(sender, binding, 1)}"/>
        <UiButton Style="OtherButton" Text="Text defined in xml." Width="320" Height="64" X="C" Y="C+10" Align="Center,Top" Click="{OnClick(sender)}"/>
      </UiBorder.Children>
    </UiBorder>
    
<!--<UiListBox Binding="{List}">
        <UiListBox.ItemTemplate>
            <UiLabel Text="{{Text}}" list:Width="100%" list:Height="Auto" Font="TestFont" FontSize="16" TextColor="0,0,0" TextAlign="Center"/>
        </UiListBox.ItemTemplate>
    </UiListBox>-->
  </UiSplitterView.Children>
</UiSplitterView>
