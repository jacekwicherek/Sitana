<?xml version="1.0" encoding="utf-8"?>
<core:StylesContainer
    xmlns="namespace:Sitana.Framework.Ui.Views,Sitana.Framework"
    xmlns:button="namespace:Sitana.Framework.Ui.Views.ButtonDrawables,Sitana.Framework"
    xmlns:core="namespace:Sitana.Framework.Ui.Core,Sitana.Framework">
  
  <Style Name="DefaultButton">
    <UiButton>
      <UiButton.Drawables>
        <button:NinePatchBackground ColorPushed="#a04040" ColorReleased="#800000" ColorDisabled="#80800000" Image="Ui/Button"/>
        <button:Text ColorPushed="#ffb0b0" ColorReleased="#c09090" ColorDisabled="#80c09090" Font="TestFont" FontSize="16" TextAlign="Center,Middle" Padding="10"/>
      </UiButton.Drawables>
    </UiButton>
  </Style>

  <Style Name="DefaultButtonSystem">
    <UiButton>
      <UiButton.Drawables>
        <button:NinePatchBackground ColorPushed="#4080a0" ColorReleased="#004080" ColorDisabled="#80004080" Image="Ui/Button"/>
        <button:Text ColorPushed="#b0d0ff" ColorReleased="#90b0c0" ColorDisabled="#8090b0c0" Font="TestFont" FontSize="12" TextAlign="Center,Middle" Padding="10"/>
      </UiButton.Drawables>
    </UiButton>
  </Style>

</core:StylesContainer>
