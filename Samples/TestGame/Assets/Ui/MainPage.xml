<?xml version="1.0" encoding="utf-8"?>
<UiPage Controller="TestGame.MainPage,TestGame"
    xmlns="namespace:Sitana.Framework.Ui.Views,Sitana.Framework"
    xmlns:button="namespace:Sitana.Framework.Ui.Views.ButtonDrawables,Sitana.Framework"
    xmlns:effect="namespace:Sitana.Framework.Ui.Views.TransitionEffects,Sitana.Framework"
    Style="Transition">
  <!-- Change style to see different transition effects-->
  <UiPage.Content>
    <UiBorder>
      <UiBorder.Children>
        <UiLabel Text="SITANA GAME" Font="TestFont" FontSize="20" X="C" Y="20" TextAlign="Center,Top" Align="Center,Top" Width="@" Height="@"/>

        <UiImage Image="Ui/Logo" Color="#ffffff" Stretch="Uniform" X="C" Y="C-75" Align="Center,Middle" Width="150" Height="150"/>
        
        <UiButton Style="DefaultButton" Text="Start Game" Y="C+40" Click="{OnNewGame()}"/>
        <UiButton Style="DefaultButton" Text="Options" Y="C+110" Click="{NavigateTo('Ui/OptionsPage')}"/>
        
      </UiBorder.Children>
    </UiBorder>
  </UiPage.Content>
</UiPage>
