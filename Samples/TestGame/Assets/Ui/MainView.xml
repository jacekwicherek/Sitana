<?xml version="1.0" encoding="utf-8"?>
<UiSplitterView Controller="TestGame.TestController,TestGame"
    xmlns="namespace:Sitana.Framework.Ui.Views,Sitana.Framework"
    xmlns:button="namespace:Sitana.Framework.Ui.Views.ButtonDrawables,Sitana.Framework"
    xmlns:pp="type:Sitana.Framework.Ui.Views.PositionParameters,Sitana.Framework"
    pp:Width="640" pp:Height="480" SplitterSize="4" Position="45" Mode="Horizontal" ViewRemoved="{OnViewRemoved()}" ClipChildren="true" ViewResized="{OnResized(width,height}}"
    MinWidth="480" MinHeight="320">
  <UiSplitterView.Children>

    <UiStackPanel Mode="Vertical" BackgroundColor="#203040" Spacing="10" Padding="10">
      <UiStackPanel.Children>
        <UiLabel Text="{Info}" BackgroundColor="#20ff8080" TextColor="#ffffff" Font="TestFont" FontSize="16" pp:Height="32"/>
        <UiLabel Text="{Test2()}" BackgroundColor="#208080ff" TextColor="{TextColor}" Font="TestFont" FontSize="16" pp:Height="32" pp:Width="C-10" pp:Align="Left"/>
        <UiLabel Text="{ButtonClick}" BackgroundColor="#2080ff80" TextColor="#ffffff" Font="TestFont" FontSize="16" pp:Height="32" pp:Width="C-10" pp:Align="Right"/>
        <UiStackPanel Mode="Horizontal" BackgroundColor="#2080ffff" Spacing="10" Padding="10" pp:Height="40">
          <UiStackPanel.Children>
            <UiRectangle BackgroundColor="#ff0000" pp:Width="20" pp:Height="20"/>
            <UiRectangle BackgroundColor="#ff8000" pp:Width="20" pp:Height="20"/>
            <UiRectangle BackgroundColor="#ffff00" pp:Width="20" pp:Height="20"/>
            <UiRectangle BackgroundColor="#00ff00" pp:Width="20" pp:Height="20"/>
            <UiRectangle BackgroundColor="#00ffff" pp:Width="20" pp:Height="20"/>
            <UiRectangle BackgroundColor="#0000ff" pp:Width="20" pp:Height="20"/>
            <UiRectangle BackgroundColor="#8000ff" pp:Width="20" pp:Height="20"/>
            <UiRectangle BackgroundColor="#ff00ff" pp:Width="20" pp:Height="20"/>
          </UiStackPanel.Children>
        </UiStackPanel>
      </UiStackPanel.Children>
    </UiStackPanel>

    <UiBorder BackgroundColor="#ff0000">
      <UiBorder.Children>
        <UiButton Style="DefaultButton" Text="{Test('Text from method.')}" pp:Width="320" pp:Height="64" pp:X="C" pp:Y="C-10" pp:Align="Center,Bottom" Click="{OnClick(sender, binding, 1)}"/>
        <UiButton Style="OtherButton" Text="Text defined in xml." pp:Width="320" pp:Height="64" pp:X="C" pp:Y="C+10" pp:Align="Center,Top" Click="{OnClick(sender)}"/>
      </UiBorder.Children>
    </UiBorder>
    
<!--<UiListBox Binding="{List}">
        <UiListBox.ItemTemplate>
            <UiLabel Text="{{Text}}" list:Width="100%" list:Height="Auto" Font="TestFont" FontSize="16" TextColor="0,0,0" TextAlign="Center"/>
        </UiListBox.ItemTemplate>
    </UiListBox>-->
  </UiSplitterView.Children>
</UiSplitterView>
