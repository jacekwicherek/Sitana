<?xml version="1.0" encoding="UTF-8" ?>
<core:StylesContainer
    xmlns="namespace:Sitana.Framework.Ui.Views,Sitana.Framework"
    xmlns:button="namespace:Sitana.Framework.Ui.Views.ButtonDrawables,Sitana.Framework"
    xmlns:core="namespace:Sitana.Framework.Ui.Core,Sitana.Framework"
    xmlns:effect="namespace:Sitana.Framework.Ui.Views.TransitionEffects,Sitana.Framework">

    <Style Name="MenuButton">
    <UiButton Width="40" Height="22" Y="C" HorizontalAlignment="Left" VerticalAlignment="Center">
      <UiButton.Drawables>
        <button:NinePatchBackground ColorPushed="#a04040" ColorReleased="#800000" ColorDisabled="#80800000" Image="Button" ScaleByUnit="true" Scale="0.25"/>
        <button:Text ColorPushed="#ffffff" ColorReleased="#ffa0a0" ColorDisabled="#80909090" Font="Font" FontSize="8" Margin="2"/>
      </UiButton.Drawables>
    </UiButton>
  </Style>

   <Style Name="Headers">
        <UiLabel Font="Font" FontSize="8" TextColor="#a0ffffff" HorizontalAlignment="Left" VerticalAlignment="Center" Y="C" HorizontalContentAlignment="Left"/>
   </Style>

   <Style Name="MenuLabel">
        <UiLabel Font="Font" FontSize="8" TextColor="#a0ffffff" HorizontalAlignment="Left" VerticalAlignment="Center" Y="C" Height="@" HorizontalContentAlignment="Left"/>
   </Style>

   <Style Name="MenuStripLayout">
    <UiModalLayout X="0" Y="4" Width="320" Height="32" HorizontalAlignment="Left" VerticalAlignment="Top" ShowTime="250" HideTime="250"/>
  </Style>

  <Style Name="MenuCheckBox">
    <UiCheckBox Width="72" Height="18" HorizontalAlignment="Right" VerticalAlignment="Center">
      <UiButton.Drawables>
        <button:NinePatchBackground ColorPushed="#a04040" ColorReleased="#800000" ColorDisabled="#80800000" Image="Button" ScaleByUnit="true" Scale="0.25"/>
        <button:Text ColorPushed="#ffffff" ColorReleased="#ffa0a0" ColorDisabled="#80909090" Font="Font" FontSize="8" HorizontalContentAlignment="Right" Margin="4"/>
        <button:CheckMark Style="ChangeTime" ColorPushed="#80ffffff" ColorReleased="#ffa0a0" ImageChecked="CheckBox" Scale="0.1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4"/>
        <button:CheckMark Style="ChangeTime" ColorPushed="#40ffffff" ColorReleased="#40ffa0a0" ImageUnchecked="CheckBox" Scale="0.1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4"/>
      </UiButton.Drawables>
    </UiCheckBox>
  </Style>

  <Style Name="MenuStrip">
    <UiStackPanel Mode="Horizontal" Padding="4" Spacing="4" BackgroundColor="#006080">
      <UiView.ShowTransitionEffect>
        <effect:Group>
          <effect:Swype Horizontal="C" Power="2"/>
          <effect:Rotate Angle="30"/>
        </effect:Group>
      </UiView.ShowTransitionEffect>
      <UiView.HideTransitionEffect>
        <effect:Group>
          <effect:Swype Horizontal="-C" Power="2"/>
          <effect:Rotate Angle="30"/>
        </effect:Group>
      </UiView.HideTransitionEffect>
    </UiStackPanel>
  </Style>

  </core:StylesContainer>