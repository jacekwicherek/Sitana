<?xml version="1.0" encoding="utf-8"?>
<core:StylesContainer
    xmlns="namespace:Sitana.Framework.Ui.Views,Sitana.Framework"
    xmlns:button="namespace:Sitana.Framework.Ui.Views.ButtonDrawables,Sitana.Framework"
    xmlns:core="namespace:Sitana.Framework.Ui.Core,Sitana.Framework"
    xmlns:effect="namespace:Sitana.Framework.Ui.Views.TransitionEffects,Sitana.Framework">

  <Include Path="MenuStyles"/>

  <Style Name="MessageBoxButton">
    <UiCheckBox Width="48" Height="24" HorizontalAlignment="Center" VerticalAlignment="Bottom" ShowHideTime="0" Y="@-16">
      <UiButton.Drawables>
        <button:NinePatchBackground ColorPushed="#a04040" ColorReleased="#800000" ColorDisabled="#80800000" Image="Button" />
        <button:Text ColorPushed="#ffffff" ColorReleased="#ffa0a0" ColorDisabled="#80909090" Font="Font" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
      </UiButton.Drawables>
    </UiCheckBox>
  </Style>
    
  <Style Name="TabButton">
    <UiButton Width="64" Height="18" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-2,0,0">
      <UiButton.Drawables>
        <button:NinePatchBackground ColorPushed="#ffffff" ColorReleased="#ffa0a0" Image="Tab" Checked="true"/>
        <button:NinePatchBackground ColorPushed="#a04040" ColorReleased="#800000" Image="Tab" Checked="false"/>

        <button:Text ColorPushed="#ffffff" ColorReleased="#ffa0a0" Font="Font" FontSize="8" Margin="2" Checked="false"/>
        <button:Text ColorPushed="#a04040" ColorReleased="#800000" Font="Font" FontSize="8" Margin="2" Checked="true"/>
      </UiButton.Drawables>
    </UiButton>
  </Style>

  <Style Name="UiButton">
    <UiButton Width="64" Height="24" HorizontalAlignment="Center" VerticalAlignment="Top" ShowHideTime="0">
      <UiButton.Drawables>
        <button:NinePatchBackground ColorPushed="#a04040" ColorReleased="#800000" ColorDisabled="#80800000" Image="Button" />
        <button:Text ColorPushed="#ffffff" ColorReleased="#ffa0a0" ColorDisabled="#80909090" Font="Font" FontSize="8" Margin="2"/>
      </UiButton.Drawables>
    </UiButton>
  </Style>

  <Style Name="LayerArrows">
    <UiButton Width="18" Height="18" HorizontalAlignment="Left" VerticalAlignment="Center" ShowHideTime="0">
      <UiButton.Drawables>
        <button:NinePatchBackground ColorPushed="#20ffffff" ColorReleased="#40ffffff" ColorDisabled="#10ffffff" Image="Button" />
        <button:Text ColorPushed="#ffffff" ColorReleased="#80ffffff" ColorDisabled="#20ffffff" Font="Font" FontSize="8"/>
      </UiButton.Drawables>
    </UiButton>
  </Style>

  <Style Name="UiEditBox">
    <UiEditBox Width="48" Height="18">
      <UiButton.Drawables>
        
        <button:NinePatchBackground ColorPushed="#800000" ColorReleased="#40000000" Image="Button" Checked="false" Margin="-1" Scale="0.5"/>
        <button:NinePatchBackground ColorPushed="#ffffff" ColorReleased="#80ffffff" ColorDisabled="#40ffffff" Image="Button" Checked="false" Scale="0.5"/>
        <button:NinePatchBackground ColorPushed="#800000" ColorReleased="#800000" Image="Button" Checked="true" Margin="-2" Scale="0.5"/>
        <button:NinePatchBackground ColorPushed="#ffffff" ColorReleased="#ffffff" Image="Button" Checked="true" Scale="0.5"/>
        <button:Text ColorPushed="#800000" ColorReleased="#800000" ColorDisabled="#80800000" Font="Font" FontSize="8" Margin="2" Checked="false"/>
        <button:Text ColorPushed="#800000" ColorReleased="#800000" Font="Font" FontSize="8" Margin="2" Checked="true"/>
      </UiButton.Drawables>
    </UiEditBox>
  </Style>

  <Style Name="UiScrollBar">
    <UiScrollBar Mode="Vertical" Width="15" HorizontalAlignment="Right">
      <UiScrollBar.TrackDrawables>
        <button:NinePatchBackground ColorPushed="#60ffffff" ColorReleased="#60ffa0a0" Image="Button" Scale="0.3" Margin="6,0,5,0"/>
      </UiScrollBar.TrackDrawables>

      <UiScrollBar.ThumbDrawables>
            <button:NinePatchBackground ColorPushed="#a04040" ColorReleased="#800000" Image="Button" Scale="0.5" Margin="4,0,3,0"/>
      </UiScrollBar.ThumbDrawables>

    </UiScrollBar>
  </Style>

  <Style Name="UiCheckBox">
    <UiCheckBox Width="72" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center">
      <UiButton.Drawables>
        <button:NinePatchBackground ColorPushed="#ffa0a0" ColorReleased="#ffa0a0" Image="Button" Checked="true"/>
            <button:NinePatchBackground ColorPushed="#a04040" ColorReleased="#800000" Image="Button" Checked="false"/>

            <button:Text ColorPushed="#800000" ColorReleased="#800000" Font="Font" FontSize="8" Margin="2" Checked="true"/>
            <button:Text ColorPushed="#a0ffffff" ColorReleased="#ffa0a0" Font="Font" FontSize="8" Margin="2" Checked="false"/>
      </UiButton.Drawables>
    </UiCheckBox>
  </Style>

  <Style Name="ChangeTime">
    <button:ButtonDrawable ChangeTime="100"/>
  </Style>

 <Style Name="PropertyCheckBox">
    <UiCheckBox Width="96" Height="18" HorizontalAlignment="Left" VerticalAlignment="Center" Y="C">
      <UiButton.Drawables>
        <button:NinePatchBackground ColorPushed="#004050" ColorReleased="#003040" Image="Button" ScaleByUnit="true"/>
        <button:Text ColorPushed="#ffffff" ColorReleased="#a0ffffff" Font="Font" FontSize="8" HorizontalContentAlignment="Right" Margin="4"/>
        <button:Image Style="ChangeTime" ColorPushed="#40ffffff" ColorReleased="#40000000" Checked="false" Image="CheckBox" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4"/>
        <button:Image Style="ChangeTime" ColorPushed="#a0ffffff" ColorReleased="#e0f0ff" Checked="true" Image="CheckBox" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4"/>
      </UiButton.Drawables>
    </UiCheckBox>
  </Style>

  <Style Name="Property">
    <UiView Height="24" VerticalAlignment="Center" BackgroundColor="#20ffffff" ShowHideTime="0"/>
  </Style>

  <Style Name="PropertyName">
    <UiLabel Margin="15,0,0,0" HorizontalContentAlignment="Left" Font="Font" FontSize="8" TextColor="#ffffff"/>
  </Style>

  <Style Name="PropertyValue">
    <UiView X="@-15" Y="C" HorizontalAlignment="Right" VerticalAlignment="Center"/>
  </Style>

  <Style Name="UiLabel">
    <UiLabel Font="Font" FontSize="8" TextColor="#ffffff"/>
  </Style>

</core:StylesContainer>
