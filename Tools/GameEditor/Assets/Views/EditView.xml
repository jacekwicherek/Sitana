<?xml version="1.0" encoding="utf-8"?>
<UiBorder Controller="GameEditor.EditViewController,GameEditor"
        xmlns="namespace:Sitana.Framework.Ui.Views,Sitana.Framework"
        xmlns:button="namespace:Sitana.Framework.Ui.Views.ButtonDrawables,Sitana.Framework"
        xmlns:effect="namespace:Sitana.Framework.Ui.Views.TransitionEffects,Sitana.Framework"
        xmlns:cmd="namespace:Sitana.Framework.Ui.DefinitionFiles.Commands,Sitana.Framework"
        xmlns:editor="namespace:GameEditor.Views,GameEditor"
        ClipChildren="true" BackgroundColor=":ContentBackground" X="348" Y="4" Width="@-352" Height="@-8" HorizontalAlignment="Left" VerticalAlignment="Top" ViewAdded="{OnViewAdded()}">

  <editor:UiEditView Id="EditView" Zoom="{Zoom}"/>

  <UiScrollBar Style="UiScrollBar" Context="EditView" Margin="0,8,0,32"/>
  <UiScrollBar Style="UiScrollBarHorz" Context="EditView" Margin="8,0,96,0"/>

  <UiStackPanel Mode="Horizontal" Height="16" Spacing="4" HorizontalAlignment="Right" X="@-4" VerticalAlignment="Bottom" Y="@-4">
    <UiLabel Style="UiLabel" Width="128" Height="16" Text="{ZoomValue}" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
    <UiButton Style="UiButton" Width="24" Height="16" Text="-" Click="{ZoomOut()}"/>
    <UiButton Style="UiButton" Width="24" Height="16" Text="+"  Click="{ZoomIn()}"/>
  </UiStackPanel>

  <UiLabel Style="UiLabel" Text="{WorldCoordinates}" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" Margin="8,0,0,25"/>

</UiBorder>